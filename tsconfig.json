{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2021",
    "declaration": true,
    "moduleResolution": "Node16",
    "isolatedModules": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "src": ["src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
